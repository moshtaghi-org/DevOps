1  sudo apt update
2  sudo apt upgrade
3  sudo useradd ansible
4  sudo passwd ansible
5  sudo nano /etc/ssh/sshd_config
6  sudo systemctl restart sshd
7  sudo visudo
8  sudo apt install ansible
9  ansible --version

--centos:
sudo yum install epel-release
sudo yum update
sudo yum install ansible

